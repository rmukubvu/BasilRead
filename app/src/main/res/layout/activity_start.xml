<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.thamserios.basilread.views.StartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="96dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/ic_basil_logo"
            android:id="@+id/imageView"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:id="@+id/shiftTopText"
            android:textColor="@color/primary_white"
            android:text="Select Shift"/>
        <TextView
            android:layout_marginTop="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textColor="@color/primary_white"
            android:id="@+id/rigTopText"
            android:text="Select Rig"/>
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="@dimen/activity_vertical_gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/layout_private"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"
            android:text="Sign In"/>
        <View
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:layout_gravity="center_vertical"
                android:text="Shift Crew:"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".60"
                android:textColor="@color/colorPrimary"
                android:id="@+id/shiftCrewList">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:layout_gravity="center_vertical"
                android:text="Bench Supervisor:"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".60"
                android:textColor="@color/colorPrimary"
                android:id="@+id/benchSupervisorList">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".40"
                android:layout_gravity="center_vertical"
                android:text="Foreman:"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".60"
                android:textColor="@color/colorPrimary"
                android:id="@+id/foremanList">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_moh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/openHoursMachine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Machine Opening Hours"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_tram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/trammingHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tramming Opening Hours"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <Button
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/StartShiftButtonText"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/primary_blue"
            android:textColor="@color/primary_white"
            android:id="@+id/btnStartShift"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
